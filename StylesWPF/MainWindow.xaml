<Window x:Class="StylesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StylesWPF"
        mc:Ignorable="d"
        xmlns:global="clr-namespace:System.Globalization;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="450" Width="800"
        xmlns:wpfToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        DataContext="{DynamicResource vm}">



    <Window.Resources>
        <local:VMCalendar x:Key="vm"/>
    </Window.Resources>


    <Grid >

        <local:UserControlCalendar x:Name="MyCalendar"/>
        <TextBox x:Name="myTextBox" VerticalAlignment="Top" HorizontalAlignment="Right" Height="50" Width="100" Background="Aqua"
                 Text="{Binding SelectedDate}"/>
    </Grid>
</Window>
